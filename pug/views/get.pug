html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='css/style.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
  title Productos
  if arrayProductos.length 
    .w-50.mx-auto.border.border-primary.border-2.rounded-3
      h2.h1.text-center.my-3 Lista de Productos
        div
          table.table
            thead
              tr
                th(class='col') ID
                  th(class='col') Nombre
                    th(class='col') Stock
                      th(class='col') Precio
                        tbody
                          div
                            each val in arrayProductos
                              tr
                                td= val.id
                                  td= val.nombre
                                    td= val.stock
                                      td= val.precio
        div.d-flex.justify-content-end
          input.btn.btn-success.me-3(type='button' onclick="location.href='/';" value='Ingresar Productos')
  else
    .w-50.mx-auto.border.border-primary.border-2.rounded-3
      h2.h1.text-center.my-3 No hay productos
        div.d-flex.justify-content-end
          input.btn.btn-success.me-3(type='button' onclick="location.href='/';" value='Ingresar Productos')

